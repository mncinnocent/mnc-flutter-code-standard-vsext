{
	"name": "mnc-flutter-code-standard-vsext",
	"displayName": "MNC Flutter code standard",
	"description": "Implementation of flutter code standard for VSCode",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:mnc-flutter-code-standard-vsext.genmodule",
		"onCommand:mnc-flutter-code-standard-vsext.genwidget"
	],
	"main": "./dist/extension.js",
	"icon": "https://firebasestorage.googleapis.com/v0/b/mnc-apps-libs.appspot.com/o/logo%2Flogo.png?alt=media",
	"license": "MIT",
	"repository": {
		"url": "https://mnc-repo.mncdigital.com/mobiledevadmin/mnc-flutter-code-standard-vsext"
	},
	"contributes": {
		"commands": [
			{
				"command": "mnc-flutter-code-standard-vsext.genmodule",
				"title": "[MNC] Create Module"
			},
			{
				"command": "mnc-flutter-code-standard-vsext.genwidget",
				"title": "[MNC] Create Widget"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "mnc-flutter-code-standard-vsext.genmodule",
					"when": "editorLangId == dart"
				},
				{
					"command": "mnc-flutter-code-standard-vsext.genwidget",
					"when": "editorLangId == dart"
				}
			],
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "mnc-flutter-code-standard-vsext.genmodule",
					"group": "z_commands"
				},
				{
					"when": "explorerResourceIsFolder",
					"command": "mnc-flutter-code-standard-vsext.genwidget",
					"group": "z_commands"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/js-yaml": "^4.0.0",
		"@types/mkdirp": "^1.0.1",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"js-yaml": "^4.0.0",
		"mkdirp": "^1.0.4",
		"mocha": "^8.2.1",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	}
}